#!/usr/bin/env ruby
require_relative 'lib/import_controller'
require_relative 'lib/options'
require_relative 'lib/book'
require_relative 'lib/chapter'
require_relative 'lib/notes_generator'

options = Options.new
options.parse!

exit unless options.continue?

if options.generate?
  ImportController.new(options.file).run
elsif options.create_new?
  # do some magic to create book_data/#{options.filename}.yml
  puts "todo: create #{options.file}"
end
